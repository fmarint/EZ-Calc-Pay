<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EZCalcPay.MainPage"
             BackgroundColor="#001524">

   <ContentPage.Resources>
      <Color x:Key="SectionsColor" >#003049</Color>
      <Color x:Key="LightColor">#FFFFFF</Color>
      <Color x:Key="DarkColor">red</Color>
      <Color x:Key="ButtonColor">#d62828</Color>
   </ContentPage.Resources>

   <Grid Margin="15">
      <Grid.RowDefinitions>
         <RowDefinition Height="0.25*" />
         <RowDefinition Height="0.75*" />
      </Grid.RowDefinitions>

      <Border Padding="10" 
              Stroke="#5B5B5B"
              StrokeThickness="1"
              BackgroundColor="{ StaticResource SectionsColor }" >
         <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
         </Border.StrokeShape>
         <Border.Shadow >
            <Shadow Brush="White" Radius="12" />
         </Border.Shadow>
         <Grid>
            <Grid.RowDefinitions>
               <RowDefinition Height="0.15*" />
               <RowDefinition Height="0.85*" />
            </Grid.RowDefinitions>

            <Label Text="TOTAL P/PERSON" 
                   TextColor="#fb5607"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Grid.Row="0">
               <Label.Shadow>
                  <Shadow Brush="White" Radius="12" />
               </Label.Shadow>
            </Label>

            <Grid Grid.Row="1" 
                  ColumnDefinitions="*,1,*"
                  Padding="15">
               <Label Text="$0.00" 
                      x:Name="lblTotal"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="26"
                   TextColor="{StaticResource LightColor}"
                   Grid.Column="0">
                  <Label.Shadow>
                     <Shadow Radius="12" Offset="5,5" Brush="White" />
                  </Label.Shadow>
               </Label>
               <BoxView 
                   BackgroundColor="#8D8D8D"
                   Grid.Column="1"/>

               <VerticalStackLayout
                  Grid.Column="2"
                  VerticalOptions="Center"
                  HorizontalOptions="Center">

                  <Label Text="SUBTOTAL"
                         FontAttributes="Bold"
                         TextColor="White"/>
                  <Label x:Name="lblSubTotal"
                         TextColor="LightGray"
                         Text="$0.00"/>

                  <BoxView HeightRequest="1" 
                           WidthRequest="100"
                           Margin="0,5,0,5"
                           BackgroundColor="#7D7D7D" 
                           HorizontalOptions="Fill"/>

                  <Label Text="TIP"
                         FontAttributes="Bold"
                         TextColor="White"/>
                  <Label x:Name="lblTip"
                         TextColor="LightGray"
                         Text="$0.00"/>
               </VerticalStackLayout>
            </Grid>
         </Grid>

      </Border>

      <Border Grid.Row="1" 
              ZIndex="-1"
              Stroke="#5B5B5B"
              Margin="0,-15,0,0">
         <Border.StrokeShape>
            <RoundRectangle  CornerRadius="10" />
         </Border.StrokeShape>

         <Grid RowDefinitions="*,*,*,*"
            ColumnDefinitions="0.5*,*"
            Padding="10,0,10,0"
            Grid.Row="1">

            <Label Text="Enter your bills :"
                VerticalOptions="Center"
                TextColor="White"/>

            <Entry x:Name="txtBill"
                Grid.Column="1" 
                BackgroundColor="{StaticResource SectionsColor}"
                Keyboard="Numeric"
                Text="0.00"
                FontSize="18"
                VerticalOptions="Center"
                Completed="txtBill_Completed"
                TextColor="{StaticResource LightColor}" />

            <Label Text="Chose your tip"
                Padding="5"
                VerticalOptions="Center"
                Grid.Row="1"
                Grid.Column="0"
                TextColor="White"/>

            <HorizontalStackLayout Grid.Column="1"
                                Grid.Row="1"
                                HeightRequest="55"
                                HorizontalOptions="Center"
                                Spacing="15">

               <Button Text="10%" 
                       x:Name="btnTen"
                    BackgroundColor="{StaticResource ButtonColor}"
                    Clicked="Button_Clicked" />
               <Button Text="15%" 
                       x:Name="btnFifteen"
                    BackgroundColor="{StaticResource ButtonColor}"
                    Clicked="Button_Clicked" />
               <Button Text="20%" 
                       x:Name="btnTwenty"
                    BackgroundColor="{StaticResource ButtonColor}"
                    Clicked="Button_Clicked" />

            </HorizontalStackLayout>

            <Label Text="Tip 0 %:"
                Padding="5"
                x:Name="lblTipSlider"
                VerticalOptions="Center"
                Grid.Row="2"
                Grid.Column="0"
                TextColor="White"/>

            <Slider Grid.Row="2" 
                 Minimum="0" 
                 Maximum="30" 
                 x:Name="sliderTip"
                 ThumbColor="{StaticResource ButtonColor}"
                 MinimumTrackColor="#d62828"
                 ValueChanged="Slider_ValueChanged"
                 Grid.Column="1"/>

            <Label Text="Split the total"
                Padding="5"
                VerticalOptions="Center"
                Grid.Row="3"
                Grid.Column="0"
                TextColor="White"/>


            <HorizontalStackLayout Grid.Row="3"
                                Grid.Column="1"
                                HeightRequest="55"
                                HorizontalOptions="Center">
               <Button Text="-" 
                    FontAttributes="Bold"
                    FontSize="22"
                    ZIndex="0"
                    x:Name="btnMinus"
                    BackgroundColor="{StaticResource ButtonColor}"
                    Clicked="btnMinus_Clicked"
                    WidthRequest="60"/>
               <Label Text="1" 
                   x:Name="lblPersons"
                   TextColor="White"
                   Margin="-5,0,-5,0"
                   BackgroundColor="{StaticResource SectionsColor}"
                   WidthRequest="65"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontAttributes="Bold"
                   ZIndex="1"
                   FontSize="20" />
               <Button Text="+"
                    x:Name="btnPlus"
                    Clicked="btnPlus_Clicked"
                    WidthRequest="60"
                    FontSize="22"
                    ZIndex="0"
                    BackgroundColor="{StaticResource ButtonColor}"
                    FontAttributes="Bold" />

            </HorizontalStackLayout>
         </Grid>
      </Border>
   </Grid>

</ContentPage>
