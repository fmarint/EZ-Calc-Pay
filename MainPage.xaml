<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EZCalcPay.MainPage"
             BackgroundColor="#202020">

   <ContentPage.Resources>
      <Color x:Key="SectionsColor" >#676767</Color>
      <Color x:Key="LightColor">#FFFFFF</Color>
      <Color x:Key="DarkColor">#202020</Color>
   </ContentPage.Resources>

   <Grid Margin="15"  >
      <Grid.RowDefinitions>
         <RowDefinition Height="0.25*" />
         <RowDefinition Height="0.75*" />
      </Grid.RowDefinitions>

      <Border Padding="10" 
              Stroke="#787878"
              StrokeThickness="1"
              BackgroundColor="{ StaticResource SectionsColor }" >
         <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
         </Border.StrokeShape>
         <Grid >
            <Grid.RowDefinitions>
               <RowDefinition Height="0.1*" />
               <RowDefinition Height="0.9*" />
            </Grid.RowDefinitions>

            <Label Text="TOTAL P/PERSON" 
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Grid.Row="0"/>

            <Grid Grid.Row="1" 
                  ColumnDefinitions="*,1,*"
                  Padding="15">
               <Label Text="$0.00" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="26"
                   TextColor="{StaticResource LightColor}"
                   Grid.Column="0"/>
               <BoxView 
                   BackgroundColor="#8D8D8D"
                   Grid.Column="1"/>

               <VerticalStackLayout
                  Grid.Column="2"
                  VerticalOptions="Center"
                  HorizontalOptions="Center">

                  <Label Text="SUBTOTAL"
                         TextColor="White"/>
                  <Label x:Name="lblSubTotal"
                         TextColor="White"
                         Text="$0.00"/>

                  <BoxView HeightRequest="1" 
                           WidthRequest="100"
                           Margin="0,5,0,5"
                           BackgroundColor="#7D7D7D" 
                           HorizontalOptions="Fill"/>

                  <Label Text="TIP"
                         TextColor="White"/>
                  <Label x:Name="lblTip"
                         TextColor="White"
                         Text="$0.00"/>
               </VerticalStackLayout>
            </Grid>
         </Grid>

      </Border>

      <Grid RowDefinitions="*,*,*,*"
            ColumnDefinitions="0.4*,*"
            Margin="0,15,0,0"
            Grid.Row="1">

         <Label Text="Enter your bills :"
                VerticalOptions="Center"
                TextColor="White"/>

         <Entry x:Name="txtBill"
                Grid.Column="1" 
                BackgroundColor="{StaticResource SectionsColor}"
                Keyboard="Numeric"
                Text="0.00"
                VerticalOptions="Center"
                TextColor="{StaticResource LightColor}"/>

         <Label Text="Chose your tip"
                Padding="5"
                VerticalOptions="Center"
                Grid.Row="1"
                Grid.Column="0"
                TextColor="White"/>

         <HorizontalStackLayout Grid.Column="1"
                                Grid.Row="1"
                                HeightRequest="55"
                                HorizontalOptions="Center"
                                Spacing="15">
            
            <Button Text="10%" />
            <Button Text="15%" />
            <Button Text="20%" />

         </HorizontalStackLayout>

      </Grid>

   </Grid>

</ContentPage>
